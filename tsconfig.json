{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "types": ["node", "jest", "supertest"],
        "moduleResolution": "node",
        "outDir": "./dist/",
    },
    "exclude": ["node_modules", "test", "dist"],
    "include": ["/**/*.ts"],
}